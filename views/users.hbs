<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">营业网点信息管理</a>
    </li>
    <li class="active">员工账户管理</li>
  </ul>
</div>

<div class="page-content" ng-app="myApp" ng-controller="myCtrl">
  <div class="page-header">
    <h1>
      营业网点信息管理
      <small>
        <i class="icon-double-angle-right"></i>
        账户管理
      </small>
    </h1>
  </div>

  <div class="row" id="app">
    <div class="col-xs-12">
      <a href="/users/edit" class="btn btn-primary">
        <i class="icon-plus"></i>
        添加
      </a>
      <div class="space-6"></div>
      <div class="table-header">
        找到<span ng-bind="model.totalCount"></span>条数据（默认密码111111）
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th>照片</th>
            <th>员工姓名</th>
            <th>手机号码</th>
            <th>员工岗位</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
            <tr ng-repeat="data in model.dataList">
              <td>
                <img ng-src="\{{data.staffPhotoUrl}}" class="img-responsive" style="width: 60px; margin: 0 auto">
              </td>

              <td  ng-bind="data.staffName"></td>
              <td  ng-bind="data.staffCellphone"></td>
              <td  ng-bind="data.staffPostName"></td>


              <td ng-bind="data.createUser"></td>
              <td ng-bind="data.createTime"></td>
              <td ng-bind="data.updateUser"></td>
              <td ng-bind="data.updateTime"></td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <button type="button" class="btn btn-sm btn-success" ng-click="onChange(data.staffID)">
                    <i class="icon-edit"></i>
                    修改
                  </button>
                  <button type="button" class="btn btn-sm btn-danger" ng-click="onDelete(data.staffID, data.staffName)">
                    <i class="icon-trash"></i>
                    删除
                  </button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="modal-footer no-margin-top" ng-if="model.totalCount > 0">
        <ul class="pagination pull-right no-margin">
          <li class="prev">
            <a ng-if="model.pageNumber > 1" href="javascript:;" ng-click="onPrePage()">
              <i class="icon-double-angle-left"></i>
            </a>
          </li>
          <li ng-repeat="pageNumber in model.paginationArray" ng-class="{'active': model.pageNumber == pageNumber}">
            <a href="javascript:;" ng-click="onPagination(pageNumber)">\{{pageNumber}}</a>
          </li>
          <li class="next">
            <a ng-if="model.maxPageNumber > 0 && model.pageNumber < model.maxPageNumber" href="javascript:;" ng-click="onNextPage()">
              <i class="icon-double-angle-right"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/view/users.js"></script>