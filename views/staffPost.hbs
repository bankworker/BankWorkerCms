<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">营业网点信息管理</a>
    </li>
    <li class="active">员工岗位管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      员工岗位管理
      <small>
        <i class="icon-double-angle-right"></i>
        岗位一览
      </small>
    </h1>
  </div>

  <div class="row" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-xs-12">
      <button type="button" class="btn btn-primary" ng-click="onAdd()">
        <i class="icon-plus"></i>
        添加
      </button>
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">
              岗位名称
            </th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">
                {{this.staffPostName}}
              </td>
              <td>{{this.createUser}}</td>
              <td>{{this.createTime}}</td>
              <td>{{this.updateUser}}</td>
              <td>{{this.updateTime}}</td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <button type="button" class="btn btn-sm btn-success" ng-click="onChange('{{this.staffPostID}}', '{{this.staffPostName}}')">
                    <i class="icon-edit"></i>
                    修改
                  </button>
                  <button type="button" class="btn btn-sm btn-danger" ng-click="onDelete('{{this.staffPostID}}', '{{this.staffPostName}}')">
                    <i class="icon-trash"></i>
                    删除
                  </button>
                </div>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>

      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/staffPost?pageNumber={{prePageNum}}">
                <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/staffPost?pageNumber={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/staffPost?pageNumber={{nextPageNum}}">
                <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}

      <div class="modal fade" tabindex="-1" role="dialog" id="edit-dialog">
        <div class="modal-dialog" role="document">
          <form class="form-horizontal" name="myForm" novalidate>

            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">员工岗位信息编辑</h4>
              </div>
              <div class="alert alert-danger store-alert hidden">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span></span>
              </div>
              <div class="modal-body">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">岗位名称</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" maxlength="30" name="staffPostName" ng-change="onStaffPostChange()" ng-blur="onStaffPostBlur()" ng-model="model.staffPostName" required>
                    <p class="alert-exist" ng-if="model.showStaffPostExistMessage">该岗位名称已存在。</p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><i class="icon-remove"></i>关闭</button>
                <button type="button" class="btn btn-primary" ng-click="onSubmit()" ng-disabled="(myForm.staffPostName.$pristine && model.add)
                                                                                              || (myForm.staffPostName.$dirty && myForm.staffPostName.$invalid)
                                                                                              || model.isStaffPostValid == false">
                  <i class="icon-save"></i>
                  提交
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<script src="/javascripts/view/staffPost.js"></script>