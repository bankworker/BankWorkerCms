<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">营业网点信息管理</a>
    </li>
    <li class="active">资源管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      资源管理
      <small>
        <i class="icon-double-angle-right"></i>
        资源一览
      </small>
    </h1>
  </div>

  <div class="row" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-xs-12">
      <button type="button" class="btn btn-primary" ng-click="onAdd()"><i class="icon-plus"></i>添加</button>
      <div class="space-6"></div>
      <div class="table-header">
        找到<span ng-bind="model.totalCount"></span>条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">
              预览
            </th>
            <th>资源地址</th>

            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
            <tr ng-repeat="data in model.dataList">
              <td class="center">
                <video ng-src="\{{data.resourceUrl}}" controls="controls" style="width: 150px" ng-if="data.isVideo == true"></video>
                <img ng-src="\{{data.resourceUrl}}" style="width: 150px" ng-if="data.isVideo == false">
              </td>

              <td class="center" ng-bind="data.resourceUrl"></td>

              <td ng-bind="data.createUser"></td>
              <td ng-bind="data.createTime"></td>
              <td ng-bind="data.updateUser"></td>
              <td ng-bind="data.updateTime"></td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <button type="button" class="btn btn-sm btn-danger" ng-click="onDelete(data.resourceID, data.resourceUrl)">
                    <i class="icon-trash"></i>
                    删除
                  </button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="modal-footer no-margin-top" ng-if="model.totalCount > 0">
        <ul class="pagination pull-right no-margin">
          <li class="prev">
            <a ng-if="model.pageNumber > 1" href="javascript:;" ng-click="onPrePage()">
              <i class="icon-double-angle-left"></i>
            </a>
          </li>
          <li ng-repeat="pageNumber in model.paginationArray" ng-class="{'active': model.pageNumber == pageNumber}">
            <a href="javascript:;" ng-click="onPagination(pageNumber)">\{{pageNumber}}</a>
          </li>
          <li class="next">
            <a ng-if="model.maxPageNumber > 0 && model.pageNumber < model.maxPageNumber" href="javascript:;" ng-click="onNextPage()">
              <i class="icon-double-angle-right"></i>
            </a>
          </li>
        </ul>
      </div>

    </div>
  </div>

  <div class="modal fade" tabindex="-1" role="dialog" id="modal-resource">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">上传资源（*.jpg, *.jpeg, *.png, *.mp4）</h4>
        </div>
        <div class="alert alert-danger store-alert hidden">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <span></span>
        </div>
        <div class="modal-body">
          <div id="file-upload-logo" class="fileUploadContent"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div>

</div>

<script src="/javascripts/view/branchResource.js"></script>