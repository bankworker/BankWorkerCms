<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">大屏广告信息管理</a>
    </li>
    <li class="active">内容管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      大屏广告信息管理
      <small>
        <i class="icon-double-angle-right"></i>
        内容管理
      </small>
    </h1>
  </div>

  <div class="row" id="app">
    <div class="col-xs-12">
      <a href="/advertiseDetail?option=add" class="btn btn-primary">
        <i class="icon-plus"></i>
        添加
      </a>
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">
              广告编号
            </th>
            <th>广告名称</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">{{this.moduleID}}</td>
              <td>{{this.moduleName}}</td>
              <td>{{this.createUser}}</td>
              <td>{{this.createTime}}</td>
              <td>{{this.editUser}}</td>
              <td>{{this.editTime}}</td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <a class="green" href="/advertiseDetail?option=upd&moduleID={{this.moduleID}}">
                    <i class="icon-pencil bigger-130"></i>
                  </a>
                </div>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>
      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/user?pageNumber={{prePageNum}}">
                  <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/advertise?pageNumber={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/advertise?pageNumber={{nextPageNum}}">
                  <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}
    </div>
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
