<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">大屏媒体信息管理</a>
    </li>
    <li class="active">媒体内容管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      媒体内容管理
      <small>
        <i class="icon-double-angle-right"></i>
        媒体内容一览
      </small>
    </h1>
  </div>

  <div class="row" ng-app="myApp" ng-controller="myCtrl">
    <div class="col-xs-12">
      <a href="javascript:;" class="btn btn-sm btn-primary" ng-click="onAddImage()">
        <i class="icon-plus"></i>
        图文
      </a>
      <a href="javascript:;" class="btn btn-sm btn-primary" ng-click="onAddVideo()">
        <i class="icon-plus"></i>
        视频
      </a>
      <div class="space-6"></div>
      <div class="table-header">
        找到<span ng-bind="model.totalCount"></span>条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th>
              媒体内容名称
            </th>
            <th>媒体类型</th>
            <th>状态</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
            <tr ng-repeat="data in model.dataList">
              <td class="center" ng-bind="data.mediaModuleName"></td>
              <td class="center" ng-bind="data.mediaModuleTypeText"></td>
              <td class="center">
                <span class="label label-sm" ng-class="data.dataStatus == 'A' ? 'label-success':'label-default'" ng-bind="data.dataStatusText"></span>
              </td>

              <td ng-bind="data.createUser"></td>
              <td ng-bind="data.createTime"></td>
              <td ng-bind="data.updateUser"></td>
              <td ng-bind="data.updateTime"></td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <button type="button" class="btn btn-sm btn-info" ng-click="onEdit(data.mediaModuleID,data.mediaModuleType)">
                    <i class="icon-edit"></i>
                    编辑
                  </button>
                  <button type="button" class="btn btn-sm btn-success" ng-if="data.dataStatus == 'D'" ng-click="onActive(data.mediaModuleID)">
                    <i class="icon-edit"></i>
                    启用
                  </button>
                  <button type="button" class="btn btn-sm btn-default" ng-if="data.dataStatus == 'A'" ng-click="onDisabled(data.mediaModuleID)">
                    <i class="icon-edit"></i>
                    禁用
                  </button>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="modal-footer no-margin-top" ng-if="model.totalCount > 0">
        <ul class="pagination pull-right no-margin">
          <li class="prev">
            <a ng-if="model.pageNumber > 1" href="javascript:;" ng-click="onPrePage()">
              <i class="icon-double-angle-left"></i>
            </a>
          </li>
          <li ng-repeat="pageNumber in model.paginationArray" ng-class="{'active': model.pageNumber == pageNumber}">
            <a href="javascript:;" ng-click="onPagination(pageNumber)">\{{pageNumber}}</a>
          </li>
          <li class="next">
            <a ng-if="model.maxPageNumber > 0 && model.pageNumber < model.maxPageNumber" href="javascript:;" ng-click="onNextPage()">
              <i class="icon-double-angle-right"></i>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<script src="/javascripts/view/mediaModule.js"></script>