<div class="breadcrumbs" id="breadcrumbs">
  <ul class="breadcrumb">
    <li>
      <i class="icon-home home-icon"></i>
      <a href="/index">主页</a>
    </li>
    <li>
      <a href="#">服务档案信息管理</a>
    </li>
    <li class="active">项目管理</li>
  </ul>
</div>

<div class="page-content">
  <div class="page-header">
    <h1>
      服务档案信息管理
      <small>
        <i class="icon-double-angle-right"></i>
        项目管理
      </small>
    </h1>
  </div>

  <div class="row" id="app">
    <div class="col-xs-12">
      <button type="button" class="btn btn-primary" @click="onAdd" data-toggle="modal">
        <i class="icon-plus"></i>
        添加
      </button>
      <button type="button" class="btn btn-success" @click="onShowSearchDialog" data-toggle="modal">
        <i class="icon-search"></i>
        查询
      </button>
      <div class="space-6"></div>
      <div class="table-header">
        找到{{totalCount}}条数据
      </div>
      <div class="table-responsive">
        <table id="data-list" class="table table-striped table-bordered table-hover no-margin-bottom">
          <thead>
          <tr>
            <th class="center">
              项目编号
            </th>
            <th>模块名称</th>
            <th>项目名称</th>
            <th class="hidden-480">添加</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              添加时间
            </th>
            <th class="hidden-480">更新</th>
            <th>
              <i class="icon-time bigger-110 hidden-480"></i>
              更新时间
            </th>
            <th>操作</th>
          </tr>
          </thead>
          <tbody>
          {{#each dataList}}
            <tr>
              <td class="center">{{this.blockID}}</td>
              <td>
                <input type="hidden" value="{{this.moduleID}}">
                {{this.moduleVO.moduleName}}
              </td>
              <td>{{this.blockName}}</td>
              <td>{{this.inUser}}</td>
              <td>{{this.inDate}}</td>
              <td>{{this.lastEditUser}}</td>
              <td>{{this.lastEditDate}}</td>
              <td>
                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                  <a class="green" href="#" @click="onChange({{@index}})">
                    <i class="icon-pencil bigger-130"></i>
                  </a>
                  <a class="red" href="#" @click="onDelete('{{this.blockID}}', '{{this.blockName}}')">
                    <i class="icon-trash bigger-130"></i>
                  </a>
                </div>
              </td>
            </tr>
          {{/each}}
          </tbody>
        </table>
      </div>

      {{#if paginationArray}}
        <div class="modal-footer no-margin-top">
          <ul class="pagination pull-right no-margin">
            <li class="prev">
              {{#if prePageNum}}
                <a href="/block?moduleID={{moduleID}}&pageNumber={{prePageNum}}">
                  <i class="icon-double-angle-left"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-left"></i>
            </span>
              {{/if}}
            </li>
            {{#each paginationArray}}
              <li>
                <a href="/block?moduleID={{../moduleID}}&pageNumber={{this}}">{{this}}</a>
              </li>
            {{/each}}
            <li class="next">
              {{#if nextPageNum}}
                <a href="/block?moduleID={{moduleID}}&pageNumber={{nextPageNum}}">
                  <i class="icon-double-angle-right"></i>
                </a>
              {{else}}
                <span>
              <i class="icon-double-angle-right"></i>
            </span>
              {{/if}}
            </li>
          </ul>
        </div>
      {{/if}}

      <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">项目信息编辑</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <form class="form-horizontal">
                <div class="form-group" v-if="saveType === 'upd'">
                  <label for="inputEmail3" class="col-sm-2 control-label">项目编号</label>
                  <div class="col-sm-10">
                    <p class="form-control-static">\{{blockID}}</p>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">所属模块</label>
                  <div class="col-sm-10">
                    <select class="form-control" v-model="selectedModule">
                      <option value="0" selected>请选择所属模块</option>
                      <option v-for="module in moduleList" :value="module.moduleID">
                        \{{module.moduleName}}
                      </option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">项目名称</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" maxlength="15" id="form-field-blockName" v-model="blockName" @blur="onBlockNameBlur()">
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary" :disabled="!enabledSave" @click="onSave">保存</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
      <div class="modal fade" tabindex="-1" role="dialog" id="searchModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title">项目信息查询</h4>
            </div>
            <div class="alert alert-danger store-alert hidden">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <span></span>
            </div>
            <div class="modal-body">
              <form class="form-horizontal">
                <div class="form-group">
                  <label for="inputEmail3" class="col-sm-2 control-label">所属模块</label>
                  <div class="col-sm-10">
                    <select class="form-control" v-model="selectedSearchModule">
                      <option value="0" selected>请选择所属模块</option>
                      <option v-for="module in moduleList" :value="module.moduleID">
                        \{{module.moduleName}}
                      </option>
                    </select>
                  </div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
              <button type="button" class="btn btn-primary" @click="onSearch()">查询</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div>
    </div>
  </div>
</div>

<input type="hidden" value="{{currentPageNum}}" id="hidden-currentPageNum">
<script src="/javascripts/view/block.js"></script>